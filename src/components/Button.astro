---
const { url, text } = Astro.props
---

<button onclick='window.location.href={url}'>
  {text}
</button>

<style>
  button {
    border: 3px solid #e73628;
    border-radius: 10px;
    color: #e73628;
    background-color: transparent;
    min-width: 300px;
    height: 100px;
    outline: none;
    font-family: cabin, sans-serif;
    font-size: 32px;
    overflow: hidden;
  }
</style>
