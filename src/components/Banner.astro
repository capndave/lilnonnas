---
import { Image } from 'astro:assets'
import nonnaWithPizzaCutter from '../images/nonna-with-pizza-cutter.svg'
import pizzasOne from '../images/pizzas-one.jpg'
import pizzasTwo from '../images/pizzas-two.jpg'
import pizzasThree from '../images/pizzas-three.jpg'
import pizzasFour from '../images/pizzas-four.jpg'
---

<div>
  <Image src={pizzasOne} width='300' alt='pizzas' class='row-pic' />
  <Image src={pizzasTwo} width='300' alt='pizzas' class='row-pic' />
  <Image
    id='nonna-with-pizza-cutter'
    src={nonnaWithPizzaCutter}
    width='230'
    alt='pizzas'
  />
  <Image src={pizzasThree} width='300' alt='pizzas' class='row-pic' />
  <Image src={pizzasFour} width='300' alt='pizzas' class='row-pic' />
</div>

<style>
  div {
    align-items: center;
    display: flex;
    justify-content: center;
    margin: 0 -1rem;
  }

  #nonna-with-pizza-cutter {
    position: absolute;

    @media (width <= 850px) {
      width: 150px;
    }
  }

  .row-pic {
    width: 25%;
    height: auto;
  }
</style>
